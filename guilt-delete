#

source "`dirname $0`/guilt.lib"

patch="$1"

if [ -z "$patch" ]; then
	echo "You must specify a patch to delete"
	exit 1
fi

p=`grep -e "^$patch\$" < "$applied"`
if [ ! -z "$p" ] ; then
	echo "Cannot delete an applied patch"
	exit 1
fi

ex -s -c ":%g/^$patch\$/d|:wq" "$series"
